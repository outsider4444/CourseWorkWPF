        <Label Content="Адрес" HorizontalAlignment="Left" Margin="340,268,0,0" VerticalAlignment="Top"/>
        <Button x:Name="UpdateCustomerButton" Content="Сохранить" HorizontalAlignment="Center" Margin="0,357,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.071,0.453" Background="White" Click="UpdateCustomerButton_Click"/>

    </Grid>
</Window>
